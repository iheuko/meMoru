 <%=render 'shared/header'%>
<p>めもめも</p>
<div class='main-menu'>
  <ul class='memo-menu'>
    <% if user_signed_in? %>
      <li><%= button_to 'メモる', { controller: 'memos', action: 'new' }, method: :get, class: 'button' %></li>
      <div class='memo-main'>
        <% @memos.each do |memo| %>
          <li class='list'>
            <%= link_to memo_path(memo.id), method: :get do %>
              <h3 class='memo-title'>
                <%= memo.memo_title %>
              </h3>
              <div class='memo-massage'>
                <%= memo.memo %>
              </div>
              <div class='memo-created-time'>
                <%= memo.created_at %>
              </div>
            <%end%>
          </li>
        <% end %>  
        <% if @memos.empty? %>
          <div class='memo-empty-message'>
            <p>メモがないよ！</p>
          </div>
        <% end %>  
      </div>
    <% else %>
      <p>ログインしてね<p>
    <% end %>  
  </ul>
</div>