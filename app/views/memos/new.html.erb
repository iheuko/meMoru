<p>メモ作成フォーム</p>
<%= form_with model: @memo, url: new_memo_path, class: 'new-memo', local: true do |f| %>
  <%=render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :memo_title %><br />
    <%= f.text_area :memo_title %>
  </div>
  
  <div class="field">
    <%= f.label :memo %><br />
    <%= f.text_area :memo %>
  </div>

  <div class="field">
    <%= f.collection_select(:fram_type_id, FrameType.all, :id, :name, {}, {class:"select-box", id:"frame-type"}) %>
  </div>

  <div class="actions">
    <%= f.submit "SEND" %>
  </div>
<%end%>