<header class='top-page-header'>
  <div class='header-menu'>
    <ul class='user-menu'>
    <% if user_signed_in? %>
      <li><%= button_to 'ログアウト', '/users/sign_out', method: :delete, class: 'button' %></li> 
    <% else %>
      <li><%= button_to 'ログイン', '/users/sign_in', method: :get, class: 'button' %></li> 
      <li><%= button_to '新規登録', '/users/sign_up', method: :get, class: 'button' %></li>
    <% end %>  
    </ul>
  </div>
</header>